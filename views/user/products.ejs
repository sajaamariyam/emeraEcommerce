<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Our Collection | Emera Luxury Collection</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; -webkit-font-smoothing: antialiased; }
        .font-serif { font-family: 'Playfair Display', serif; }
        
        /* Interactive Zoom */
        .zoom-container { position: relative; overflow: hidden; cursor: zoom-in; }
        .zoom-img { transition: transform 0.4s cubic-bezier(0.165, 0.84, 0.44, 1); transform-origin: center center; }
        .zoom-container:hover .zoom-img { transform: scale(1.15); }
        
        /* Modal Backdrop */
        .modal-bg { backdrop-filter: blur(12px); opacity: 0; pointer-events: none; transition: opacity 0.4s ease; }
        .modal-bg.active { opacity: 1; pointer-events: auto; }
        
        /* Transitions */
        @keyframes slideUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
        .animate-reveal { animation: slideUp 0.8s cubic-bezier(0.2, 1, 0.3, 1) forwards; }
        
        /* OTP Fields */
        .otp-box { width: 45px; height: 55px; text-align: center; font-size: 20px; border: 1px solid #e5e7eb; border-radius: 1px; transition: border-color 0.3s; }
        .otp-box:focus { border-color: #022c22; outline: none; }

        input[type="range"] { accent-color: #022c22; }
        .no-scrollbar::-webkit-scrollbar { display: none; }
    </style>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        emera: { 50: '#fafaf9', 700: '#15803d', 900: '#14532d', 950: '#022c22' }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-white text-gray-900 selection:bg-emera-950 selection:text-white">

    <!-- Navigation -->
    <nav id="navbar" class="fixed top-0 left-0 right-0 z-50 bg-emera-950/95 backdrop-blur-md py-4 border-b border-white/10 transition-all duration-500">
        <div class="max-w-[1440px] mx-auto px-6 lg:px-12 flex justify-between items-center text-white">
            <div class="flex space-x-12 items-center">
                <a href="/" class="text-[10px] uppercase tracking-[0.3em] font-medium hover:opacity-50 transition-opacity">Home</a>
                <a href="/products" class="text-[10px] uppercase tracking-[0.3em] font-bold border-b border-white pb-1">Our Collection</a>
            </div>
            <a href="/" class="text-3xl font-serif tracking-tighter hover:opacity-80 transition-opacity">EMERA</a>
            <div class="flex space-x-8 items-center">
                <button onclick="openModal('auth-modal')" class="hover:opacity-50 transition-opacity">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                </button>
                <div class="relative cursor-pointer hover:opacity-50 transition-opacity">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>
                    <span id="global-cart-badge" class="absolute -top-2 -right-2 bg-white text-emera-950 text-[8px] w-4 h-4 rounded-full flex items-center justify-center font-bold">0</span>
                </div>
            </div>
        </div>
    </nav>

    <!-- Header Spacer -->
    <div class="h-24 bg-emera-950"></div>
    
    <main class="max-w-[1440px] mx-auto px-6 lg:px-12 py-20">
        <!-- Title & Search Section -->
        <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between mb-24 gap-12">
            <div class="space-y-6">
                <nav class="text-[9px] uppercase tracking-[0.4em] text-gray-400">
                    <a href="/" class="hover:text-black">Home</a> / <span class="text-black">Products</span>
                </nav>
                <h1 class="text-6xl md:text-7xl font-serif text-gray-900 leading-none">The <span class="italic font-light">Collection</span></h1>
                <p class="text-[11px] uppercase tracking-[0.3em] text-gray-400 font-bold">
                    <%= products?.length || 0 %> Products Available
                </p>

            </div>
            
            <div class="relative w-full lg:w-[450px] group">
                <form action="/products" method="GET" class="relative">
                    <input 
                        type="text" 
                        name="search" 
                        value="<%= search || '' %>"
                        placeholder="SEARCH PRODUCTS..." 
                        class="w-full bg-stone-50 border-none px-8 py-6 text-[10px] tracking-[0.4em] uppercase focus:ring-1 focus:ring-emera-950 outline-none transition-all"
                    >
                    <% if (search) { %>
                        <a href="/products" class="absolute right-8 top-1/2 -translate-y-1/2 text-xl text-gray-300 hover:text-black">&times;</a>
                    <% } %>
                </form>
            </div>
        </div>

        <div class="flex flex-col lg:flex-row gap-24">
            <!-- Filtering Sidebar -->
            <aside class="w-full lg:w-72 space-y-16 flex-shrink-0">
                <form action="/products" method="GET" id="filter-form">
                    <input type="hidden" name="search" value="<%= search || '' %>">
                    <input type="hidden" name="sort" value="<%= sort || 'newest' %>">
                    
                    <!-- Category Filter -->
                    <div class="space-y-10 mb-16">
                        <h4 class="text-[10px] uppercase tracking-[0.5em] font-bold text-gray-900 border-b border-stone-100 pb-4">Category</h4>
                        <div class="space-y-5">
                            <% categories.forEach(cat => { %>
                            <label class="flex items-center group cursor-pointer">
                                <input 
                                type="checkbox" 
                                name="category" 
                                value="<%= cat._id %>"
                                class="w-4 h-4 accent-emera-950"
                                onchange="this.form.submit()"
                                <%= category == cat._id ? 'checked' : '' %>>
                                <span class="ml-5 text-[11px] uppercase tracking-[0.2em] text-gray-400">
                                <%= cat.name %>
                                </span>
                            </label>
                            <% }) %>
                        </div>
                    </div>

                    <!-- Price Slider -->
                    <div class="space-y-10 mb-16">
                        <h4 class="text-[10px] uppercase tracking-[0.5em] font-bold text-gray-900 border-b border-stone-100 pb-4">Price Range</h4>
                        <div class="space-y-8 px-1">
                            <input type="range" name="maxPrice" min="0" max="100000" value="<%= maxPrice || 100000 %>" step="500" class="w-full h-1 bg-stone-100 appearance-none cursor-pointer" oninput="updatePriceLabel(this.value)" onchange="this.form.submit()">
                            <div class="flex justify-between text-[11px] uppercase tracking-widest font-bold text-emera-950">
                                <span>₹0</span>
                                <span id="price-label">UP TO ₹<%= (maxPrice || 100000).toLocaleString() %></span>
                            </div>
                        </div>
                    </div>

                    <a href="/products" class="block w-full py-5 border border-emera-950 text-center text-[10px] uppercase tracking-[0.4em] font-bold hover:bg-emera-950 hover:text-white transition-all duration-500">Clear Filters</a>
                </form>
            </aside>

            <!-- Listing View -->
            <div class="flex-1">
                <!-- Toolbar: Sorting & Grid Layout -->
                <div class="flex flex-col sm:flex-row items-center justify-between mb-16 gap-10 border-b border-stone-50 pb-12">
                    <div class="flex items-center space-x-12">
                        <span class="text-[10px] uppercase tracking-widest text-gray-400 font-bold">Sort By</span>
                        <select onchange="handleSortChange(this.value)" class="bg-transparent text-[10px] uppercase tracking-[0.3em] font-bold outline-none cursor-pointer hover:text-emera-950 transition-colors">
                            <option value="newest" <%= sort === 'newest' ? 'selected' : '' %>>Newest</option>
                            <option value="price-asc" <%= sort === 'price-asc' ? 'selected' : '' %>>Price: Low to High</option>
                            <option value="price-desc" <%= sort === 'price-desc' ? 'selected' : '' %>>Price: High to Low</option>
                            <option value="name-asc" <%= sort === 'name-asc' ? 'selected' : '' %>>Name: A-Z</option>
                            <option value="name-desc" <%= sort === 'name-desc' ? 'selected' : '' %>>Name: Z-A</option>
                        </select>
                    </div>

                    <div class="flex items-center space-x-8">
                        <button onclick="adjustGrid(2)" class="p-2 text-gray-300 hover:text-emera-950" id="grid-btn-2"><svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><rect x="3" y="3" width="8" height="18"/><rect x="13" y="3" width="8" height="18"/></svg></button>
                        <button onclick="adjustGrid(3)" class="p-2 text-gray-300 hover:text-emera-950" id="grid-btn-3"><svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><rect x="2" y="3" width="6" height="18"/><rect x="9" y="3" width="6" height="18"/><rect x="16" y="3" width="6" height="18"/></svg></button>
                        <button onclick="adjustGrid(4)" class="p-2 text-emera-950" id="grid-btn-4"><svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><rect x="2" y="3" width="4" height="18"/><rect x="7" y="3" width="4" height="18"/><rect x="12" y="3" width="4" height="18"/><rect x="17" y="3" width="4" height="18"/></svg></button>
                    </div>
                </div>

                <!-- Product Grid -->
                <div id="product-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-x-12 gap-y-24">
                    <% if (products.length === 0) { %>
                        <div class="col-span-full text-center py-40 space-y-8 animate-reveal">
                            <h3 class="text-3xl font-serif text-stone-300 italic">No pieces matching your criteria.</h3>
                            <a href="/products" class="inline-block text-[11px] uppercase tracking-[0.4em] border-b border-emera-950 pb-2 font-bold">Refresh Collection</a>
                        </div>
                    <% } else { %>
                        <% products.forEach(p => { %>
                            <div class="group animate-reveal">
                                <a href="/products/<%= p._id %>" class="block relative aspect-[4/5] bg-stone-50 overflow-hidden mb-6">
                                    <img 
                                    src="<%= p.productImage?.[0]?.url || '/images/placeholder.png' %>" 
                                    alt="<%= p.name %>" 
                                    class="zoom-img w-full h-full object-cover group-hover:scale-110 transition-transform duration-1000 ease-out">

                                    <div class="absolute inset-x-0 bottom-0 p-4 translate-y-full group-hover:translate-y-0 transition-transform duration-500">
                                        <button class="w-full bg-emera-950 text-white py-5 text-[9px] uppercase tracking-[0.4em] font-bold hover:bg-black transition-colors">View Product</button>
                                    </div>

                                    <% if (p.quantity === 0) { %>
                                        <div class="absolute top-5 left-5"><span class="bg-red-600 text-white text-[9px] font-bold px-4 py-2 uppercase tracking-widest shadow-sm">Sold Out</span></div>
                                    <% } else if (p.isFeatured) { %>
                                        <div class="absolute top-5 right-5"><span class="bg-white text-emera-950 text-[9px] font-bold px-4 py-2 uppercase tracking-widest shadow-sm">Featured</span></div>
                                    <% } %>
                                </a>

                                <div class="space-y-4 px-1">
                                    <div class="flex justify-between items-start">
                                        <h3 class="text-sm font-serif text-gray-900 group-hover:text-emera-950 transition-colors"><%= p.name %></h3>
                                        <div class="text-right">
                                            <p class="text-xs font-bold text-gray-900 tracking-widest">₹<%= p.salePrice.toLocaleString() %></p>
                                            <% if (p.salePrice < p.regularPrice) { %>
                                                <p class="text-[9px] text-gray-400 line-through">₹<%= p.regularPrice.toLocaleString() %></p>
                                            <% } %>
                                        </div>
                                    </div>
                                    <p class="text-[9px] uppercase tracking-widest text-gray-300 font-bold tracking-[0.2em]">
                                        <%= p.category?.name || 'Uncategorized' %> &bull; Premium Leather
                                    </p>

                                </div>
                            </div>
                        <% }) %>
                    <% } %>
                </div>

                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                    <div class="mt-40 flex justify-center items-center space-x-12 border-t border-stone-50 pt-20">
                        <% if (currentPage > 1) { %>
                            <a href="/products?page=<%= currentPage - 1 %>&search=<%= search || '' %>&category=<%= category || '' %>&sort=<%= sort || '' %>&maxPrice=<%= maxPrice || '' %>" class="text-[10px] uppercase tracking-[0.3em] font-bold text-gray-400 hover:text-black transition-colors">Previous</a>
                        <% } %>

                        <div class="flex space-x-6">
                            <% for(let i = 1; i <= totalPages; i++) { %>
                                <a href="/products?page=<%= i %>&search=<%= search || '' %>&category=<%= category || '' %>&sort=<%= sort || '' %>&maxPrice=<%= maxPrice || '' %>" 
                                   class="text-[10px] uppercase tracking-[0.3em] font-bold <%= currentPage === i ? 'text-emera-950 border-b border-emera-950' : 'text-gray-300 hover:text-black' %>">
                                    <%= i %>
                                </a>
                            <% } %>
                        </div>

                        <% if (currentPage < totalPages) { %>
                            <a href="/products?page=<%= currentPage + 1 %>&search=<%= search || '' %>&category=<%= category || '' %>&sort=<%= sort || '' %>&maxPrice=<%= maxPrice || '' %>" class="text-[10px] uppercase tracking-[0.3em] font-bold text-gray-400 hover:text-black transition-colors">Next</a>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <!-- Auth Modal -->
    <div id="auth-modal" class="modal-bg fixed inset-0 z-[100] flex items-center justify-center bg-black/60 px-4">
        <div class="bg-white max-w-md w-full p-12 shadow-2xl relative">
            <button onclick="closeModal('auth-modal')" class="absolute top-8 right-8 text-gray-400 hover:text-black">&times;</button>
            <div class="flex border-b border-gray-100 mb-10">
                <button onclick="switchAuth('login')" id="btn-login" class="flex-1 py-4 text-[10px] uppercase tracking-widest font-bold border-b-2 border-emera-950 text-emera-950">Login</button>
                <button onclick="switchAuth('signup')" id="btn-signup" class="flex-1 py-4 text-[10px] uppercase tracking-widest font-medium text-gray-400">Join</button>
            </div>
            
            <div id="view-login" class="space-y-6">
                <input type="email" placeholder="EMAIL ADDRESS" class="w-full px-6 py-4 bg-stone-50 border-none text-[10px] tracking-widest uppercase outline-none focus:ring-1 focus:ring-emera-950">
                <input type="password" placeholder="PASSWORD" class="w-full px-6 py-4 bg-stone-50 border-none text-[10px] tracking-widest uppercase outline-none focus:ring-1 focus:ring-emera-950">
                <button class="w-full bg-emera-950 text-white py-5 text-[10px] uppercase tracking-[0.4em] font-bold hover:bg-black transition-all">Authenticate</button>
            </div>

            <div id="view-signup" class="hidden space-y-6">
                <input type="email" id="target-email" placeholder="EMAIL ADDRESS" class="w-full px-6 py-4 bg-stone-50 border-none text-[10px] tracking-widest uppercase outline-none">
                <button onclick="triggerOTP()" class="w-full bg-emera-950 text-white py-5 text-[10px] uppercase tracking-[0.4em] font-bold">Request Access</button>
            </div>

            <div id="view-otp" class="hidden text-center space-y-10">
                <p class="text-[10px] text-gray-400 uppercase tracking-widest">Verification code sent to <br><span id="otp-display-mail" class="font-bold text-black"></span></p>
                <div class="flex justify-center gap-4">
                    <input type="text" maxlength="1" class="otp-box" onkeyup="moveFocus(this, 0)">
                    <input type="text" maxlength="1" class="otp-box" onkeyup="moveFocus(this, 1)">
                    <input type="text" maxlength="1" class="otp-box" onkeyup="moveFocus(this, 2)">
                    <input type="text" maxlength="1" class="otp-box" onkeyup="moveFocus(this, 3)">
                </div>
                <button onclick="closeModal('auth-modal')" class="w-full bg-emera-950 text-white py-5 text-[10px] uppercase tracking-[0.4em] font-bold">Complete Access</button>
            </div>
        </div>
    </div>

    <footer class="bg-white border-t border-stone-100 pt-32 pb-16">
  <div class="max-w-[1440px] mx-auto px-6 lg:px-12 grid grid-cols-1 md:grid-cols-4 gap-24 mb-24">

    <!-- BRAND -->
    <div class="col-span-1">
      <h2 class="text-4xl font-serif mb-10 tracking-tighter">EMERA</h2>
      <p class="text-[11px] text-stone-400 leading-relaxed max-w-xs font-light tracking-wide">
        Premium leather bags designed for everyday elegance. Crafted with quality materials and modern design standards.
      </p>
    </div>

    <!-- SHOP -->
    <div>
      <h4 class="text-[10px] uppercase tracking-[0.4em] font-bold mb-10 text-gray-900">
        Shop
      </h4>
      <ul class="space-y-6 text-[10px] uppercase tracking-[0.2em] text-stone-400 font-bold">
        <li>
          <a href="/products" class="hover:text-emera-950 transition-colors">
            All Products
          </a>
        </li>
        <li>
          <a href="/products?featured=true" class="hover:text-emera-950 transition-colors">
            Featured Items
          </a>
        </li>
      </ul>
    </div>

    <!-- COMPANY -->
    <div>
      <h4 class="text-[10px] uppercase tracking-[0.4em] font-bold mb-10 text-gray-900">
        Company
      </h4>
      <ul class="space-y-6 text-[10px] uppercase tracking-[0.2em] text-stone-400 font-bold">
        <li>
          <a href="/about" class="hover:text-emera-950 transition-colors">
            About Us
          </a>
        </li>
        <li>
          <a href="/contact" class="hover:text-emera-950 transition-colors">
            Contact
          </a>
        </li>
      </ul>
    </div>

    <!-- NEWSLETTER -->
    <div>
      <h4 class="text-[10px] uppercase tracking-[0.4em] font-bold mb-10 text-gray-900">
        Newsletter
      </h4>
      <p class="text-[11px] text-stone-400 mb-6 leading-relaxed">
        Subscribe to receive updates on new arrivals, offers, and promotions.
      </p>
      <form class="flex border-b border-stone-200 pb-3 group focus-within:border-emera-950 transition-colors">
        <input
          type="email"
          placeholder="Enter your email"
          class="flex-1 bg-transparent border-none py-2 text-[10px] tracking-widest outline-none"
        />
        <button
          type="submit"
          class="text-[10px] uppercase tracking-widest font-bold opacity-60 hover:opacity-100 transition"
        >
          Subscribe
        </button>
      </form>
    </div>

  </div>

  <!-- COPYRIGHT -->
  <div class="max-w-[1440px] mx-auto px-6 lg:px-12 pt-12 border-t border-stone-100 text-[9px] uppercase tracking-[0.3em] text-stone-400 text-center font-bold">
    © 2025 EMERA Pvt. Ltd. India. All rights reserved.
  </div>
</footer>


    <script>
        function updatePriceLabel(val) {
            document.getElementById('price-label').textContent = `UP TO ₹${Number(val).toLocaleString()}`;
        }

        function handleSortChange(val) {
        const url = new URL(window.location.href);
        url.searchParams.set('sort', val);
        url.searchParams.set('page', 1); // important: reset pagination
        window.location.href = url.toString();
        }


        function adjustGrid(n) {
            const grid = document.getElementById('product-grid');
            grid.className = `grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-${n} gap-x-12 gap-y-24`;
            [2,3,4].forEach(i => {
                const b = document.getElementById(`grid-btn-${i}`);
                if (i === n) b.classList.add('text-emera-950');
                else b.classList.remove('text-emera-950');
            });
        }

        function openModal(id) { document.getElementById(id).classList.add('active'); }
        function closeModal(id) { document.getElementById(id).classList.remove('active'); }

        function switchAuth(mode) {
            const lV = document.getElementById('view-login'), sV = document.getElementById('view-signup');
            const lB = document.getElementById('btn-login'), sB = document.getElementById('btn-signup');
            if(mode === 'login') {
                lV.classList.remove('hidden'); sV.classList.add('hidden');
                lB.className = 'flex-1 py-4 text-[10px] uppercase tracking-widest font-bold border-b-2 border-emera-950 text-emera-950';
                sB.className = 'flex-1 py-4 text-[10px] uppercase tracking-widest font-medium text-gray-400';
            } else {
                sV.classList.remove('hidden'); lV.classList.add('hidden');
                sB.className = 'flex-1 py-4 text-[10px] uppercase tracking-widest font-bold border-b-2 border-emera-950 text-emera-950';
                lB.className = 'flex-1 py-4 text-[10px] uppercase tracking-widest font-medium text-gray-400';
            }
        }

        function triggerOTP() {
            document.getElementById('view-signup').classList.add('hidden');
            document.getElementById('view-otp').classList.remove('hidden');
            document.getElementById('otp-display-mail').textContent = document.getElementById('target-email').value || 'guest@emera.com';
        }

        function moveFocus(i, idx) {
            if(i.value.length === 1 && idx < 3) document.querySelectorAll('.otp-box')[idx+1].focus();
        }

        window.addEventListener('scroll', () => {
            const nav = document.getElementById('navbar');
            if (window.scrollY > 50) nav.classList.add('shadow-xl', 'bg-emera-950');
            else nav.classList.remove('shadow-xl', 'bg-emera-950');
        });
    </script>
</body>
</html>