<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EMERA - Forgot Password</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background-color: #f5f5f0;
        }
    </style>
</head>
<body class="min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-md">
        <!-- Logo -->
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-teal-800">EMERA</h1>
            <p class="text-yellow-600 text-sm tracking-wider">LUXURY SHOPPING</p>
        </div>

        <!-- Card -->
        <div class="bg-white rounded-3xl shadow-lg p-8">
            <h2 class="text-3xl font-semibold text-gray-800 text-center mb-2">Forgot Password?</h2>
            <p class="text-gray-600 text-center mb-8">Enter your email to receive a verification code.</p>

            <!-- Form -->
            
            <form action="/forgot-password" method="POST">

                <div class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                    <input 
                        type="email" 
                        id="email"
                        name="email"
                        placeholder="your.email@example.com"
                        class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:outline-none focus:ring-2 focus:ring-teal-600 focus:border-transparent"
                    >
                </div>

                <button 
                    onclick="sendVerification()"
                    class="w-full bg-teal-700 hover:bg-teal-800 text-white font-medium py-3 rounded-full transition duration-200"
                >
                    Send Verification Code
                </button>

                <div class="text-center">
                    <a href="#" class="text-yellow-600 hover:text-yellow-700 text-sm font-medium">
                        Back to Login
                    </a>
                </div>
            </div>

            </form>


        </div>

        <!-- Footer Links -->
        <div class="flex items-center justify-center gap-4 mt-6 text-sm text-yellow-600">
            <a href="#" class="hover:text-yellow-700">Terms</a>
            <span class="text-gray-400">•</span>
            <a href="#" class="hover:text-yellow-700">Privacy</a>
            <span class="text-gray-400">•</span>
            <a href="#" class="hover:text-yellow-700">Help</a>
        </div>
    </div>

    <script>
        function sendVerification() {
            const email = document.getElementById('emailInput').value;
            if (email && email.includes('@')) {
                alert('Verification code sent to ' + email);
                // In a real application, this would redirect to the reset password page
                // window.location.href = 'reset-password.html';
            } else {
                alert('Please enter a valid email address');
            }
        }
    </script>
</body>
</html>