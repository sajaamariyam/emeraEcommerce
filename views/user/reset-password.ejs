<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EMERA - Reset Password</title>
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        body { background-color: #f5f5f0; }
    </style>
</head>

<body class="min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-md">

        <!-- Logo -->
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-teal-800">EMERA</h1>
            <p class="text-yellow-600 text-sm tracking-wider">LUXURY SHOPPING</p>
        </div>

        <!-- Card -->
        <div class="bg-white rounded-3xl shadow-lg p-8">
            <h2 class="text-3xl font-semibold text-gray-800 text-center mb-2">Reset Your Password</h2>
            <p class="text-gray-600 text-center mb-8">Create a new password to secure your account.</p>

            <!-- FIXED FORM -->
            <form id="resetForm" action="/reset-password" method="POST" onsubmit="return validateBeforeSubmit()">

                <div class="space-y-6">

                    <!-- New Password -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">New Password</label>
                        <input 
                            type="password"
                            id="newPassword"
                            name="newPassword"
                            placeholder="••••••••"
                            class="w-full px-4 py-3 rounded-lg border border-gray-200 
                                   focus:outline-none focus:ring-2 focus:ring-teal-600"
                            oninput="validatePassword()"
                            required
                        >
                    </div>

                    <!-- Confirm Password -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Confirm New Password</label>
                        <input 
                            type="password"
                            id="confirmPassword"
                            name="confirmPassword"
                            placeholder="••••••••"
                            class="w-full px-4 py-3 rounded-lg border border-gray-200 
                                   focus:outline-none focus:ring-2 focus:ring-teal-600"
                            required
                        >
                    </div>
                </div>

                <!-- Password Requirements -->
                <div class="space-y-2 text-sm mt-4">
                    <div class="flex items-center gap-2">
                        <div id="check1" class="w-1.5 h-1.5 rounded-full bg-gray-300"></div>
                        <span id="text1" class="text-gray-500">Minimum 8 characters</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <div id="check2" class="w-1.5 h-1.5 rounded-full bg-gray-300"></div>
                        <span id="text2" class="text-gray-500">One uppercase letter</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <div id="check3" class="w-1.5 h-1.5 rounded-full bg-gray-300"></div>
                        <span id="text3" class="text-gray-500">One number</span>
                    </div>
                </div>

                <!-- Submit Button -->
                <button 
                    type="submit"
                    class="w-full bg-teal-700 hover:bg-teal-800 text-white font-medium 
                           py-3 mt-6 rounded-full transition duration-200"
                >
                    Update Password
                </button>

                <div class="text-center mt-4">
                    <a href="/login" class="text-yellow-600 hover:text-yellow-700 text-sm font-medium">
                        Back to Login
                    </a>
                </div>

            </form>
        </div>

        <!-- Footer -->
        <div class="flex items-center justify-center gap-4 mt-6 text-sm text-yellow-600">
            <a href="#" class="hover:text-yellow-700">Terms</a>
            <span class="text-gray-400">•</span>
            <a href="#" class="hover:text-yellow-700">Privacy</a>
            <span class="text-gray-400">•</span>
            <a href="#" class="hover:text-yellow-700">Help</a>
        </div>
    </div>

    <script>
        function validatePassword() {
            const password = document.getElementById("newPassword").value;

            updateRequirement(1, password.length >= 8);
            updateRequirement(2, /[A-Z]/.test(password));
            updateRequirement(3, /[0-9]/.test(password));
        }

        function updateRequirement(num, isValid) {
            const dot = document.getElementById("check" + num);
            const text = document.getElementById("text" + num);

            if (isValid) {
                dot.classList.replace("bg-gray-300", "bg-yellow-500");
                text.classList.replace("text-gray-500", "text-gray-700");
            } else {
                dot.classList.replace("bg-yellow-500", "bg-gray-300");
                text.classList.replace("text-gray-700", "text-gray-500");
            }
        }

        
        function validateBeforeSubmit() {
            const pass = document.getElementById("newPassword").value;
            const confirm = document.getElementById("confirmPassword").value;

            if (pass !== confirm) {
                alert("Passwords do not match");
                return false;
            }

            if (pass.length < 8 || !/[A-Z]/.test(pass) || !/[0-9]/.test(pass)) {
                alert("Password does not meet requirements");
                return false;
            }

            return true; 
        }
    </script>

</body>
</html>
