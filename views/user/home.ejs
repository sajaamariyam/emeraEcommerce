<%- include('../partials/user/header', { user: user }) %>


    <!-- Hero Section -->
    <header class="relative w-full h-[85vh] overflow-hidden">
        <!-- Background Image -->
        <div class="absolute inset-0">
            <img src="https://images.unsplash.com/photo-1548036328-c9fa89d128fa?q=80&w=2069&auto=format&fit=crop" 
                 alt="Luxury Handbag" 
                 class="w-full h-full object-cover object-center transform scale-105 animate-[fadeIn_1.5s_ease-out_forwards]">
            <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-black/10"></div>
        </div>
        
        <!-- Hero Content -->
        <div class="absolute inset-0 flex flex-col justify-end pb-24 px-4 sm:px-6 lg:px-12 items-start max-w-7xl mx-auto">
            <span class="text-white/90 text-sm tracking-[0.2em] uppercase mb-4 animate-slide-up" style="animation-delay: 0.1s;">The Spring 2024 Collection</span>
            <h1 class="text-4xl md:text-6xl lg:text-7xl font-serif text-white mb-6 leading-tight animate-slide-up" style="animation-delay: 0.2s;">
                Timeless <br/><span class="italic font-light">Sophistication</span>
            </h1>
            <p class="text-white/80 max-w-md mb-8 text-lg font-light leading-relaxed animate-slide-up" style="animation-delay: 0.3s;">
                Discover our latest designs, handcrafted in Italy using the finest sustainable leathers.
            </p>
            <a href="#collection" class="group inline-flex items-center px-8 py-4 bg-white text-emera-950 text-sm tracking-widest uppercase font-medium hover:bg-emera-950 hover:text-white transition-all duration-300 animate-slide-up" style="animation-delay: 0.4s;">
                Shop The Collection
                <svg class="ml-2 w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
            </a>
        </div>
    </header>

    <!-- Categories Section -->
    <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <!-- Category 1 -->
                <a href="#" class="group relative h-[400px] overflow-hidden cursor-pointer block">
                    <img src="https://images.unsplash.com/photo-1590874103328-eac38a683ce7?q=80&w=1000&auto=format&fit=crop" 
                         alt="Shoulder Bags" 
                         class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105">
                    <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors"></div>
                    <div class="absolute bottom-8 left-8">
                        <h3 class="text-2xl font-serif text-white mb-2">Shoulder Bags</h3>
                        <span class="text-white text-xs uppercase tracking-widest border-b border-transparent group-hover:border-white transition-all pb-1">View All</span>
                    </div>
                </a>
                <!-- Category 2 -->
                <a href="#" class="group relative h-[400px] overflow-hidden cursor-pointer block mt-0 md:-mt-8">
                    <img src="https://images.unsplash.com/photo-1584917865442-de89df76afd3?q=80&w=1000&auto=format&fit=crop" 
                         alt="Totes" 
                         class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105">
                    <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors"></div>
                    <div class="absolute bottom-8 left-8">
                        <h3 class="text-2xl font-serif text-white mb-2">Signature Totes</h3>
                        <span class="text-white text-xs uppercase tracking-widest border-b border-transparent group-hover:border-white transition-all pb-1">View All</span>
                    </div>
                </a>
                <!-- Category 3 -->
                <a href="#" class="group relative h-[400px] overflow-hidden cursor-pointer block">
                    <img src="https://images.unsplash.com/photo-1566150905458-1bf1fc113f0d?q=80&w=1000&auto=format&fit=crop" 
                         alt="Mini Bags" 
                         class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105">
                    <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors"></div>
                    <div class="absolute bottom-8 left-8">
                        <h3 class="text-2xl font-serif text-white mb-2">Mini Bags</h3>
                        <span class="text-white text-xs uppercase tracking-widest border-b border-transparent group-hover:border-white transition-all pb-1">View All</span>
                    </div>
                </a>
            </div>
        </div>
    </section>

    <!-- Product Showcase -->
    <section id="collection" class="py-16 md:py-24 bg-stone-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col md:flex-row justify-between items-end mb-12">
                <div>
                    <span class="text-emera-700 text-sm font-semibold tracking-wider uppercase mb-2 block">Curated Selection</span>
                    <h2 class="text-3xl md:text-4xl font-serif text-gray-900">Featured Icons</h2>
                </div>
                <div class="hidden md:flex space-x-8 mt-4 md:mt-0">
                    <button class="text-gray-900 font-medium border-b-2 border-gray-900 pb-1">All</button>
                    <button class="text-gray-500 hover:text-gray-900 transition-colors pb-1">New In</button>
                    <button class="text-gray-500 hover:text-gray-900 transition-colors pb-1">Bestsellers</button>
                </div>
            </div>

            <!-- Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-x-8 gap-y-12">
                <!-- Product 1 -->
                <div class="group">
                    <a href="product.html" class="block relative w-full aspect-[4/5] bg-white overflow-hidden mb-4 cursor-pointer">
                        <img src="https://images.unsplash.com/photo-1584917865442-de89df76afd3?q=80&w=870&auto=format&fit=crop" alt="Bag" class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-500">
                        <div class="absolute inset-x-0 bottom-0 p-4 translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                            <button class="add-to-cart-btn w-full bg-emera-950 text-white py-3 text-xs uppercase tracking-widest hover:bg-black transition-colors">
                                Add to Cart
                            </button>
                        </div>
                        <div class="absolute top-3 right-3">
                            <span class="bg-white/90 text-[10px] font-bold px-2 py-1 uppercase tracking-widest">New</span>
                        </div>
                    </a>
                    <div class="flex justify-between items-start">
                        <div>
                            <a href="product.html" class="h3 text-lg font-serif text-gray-900 group-hover:text-emera-800 transition-colors block">The Verona Tote</a>
                            <p class="text-sm text-gray-500 mt-1">Saddle Brown Leather</p>
                        </div>
                        <p class="text-sm font-medium text-gray-900">$1,250</p>
                    </div>
                </div>

                <!-- Product 2 -->
                <div class="group">
                    <div class="relative w-full aspect-[4/5] bg-white overflow-hidden mb-4">
                        <img src="https://images.unsplash.com/photo-1591561954557-26941169b49e?q=80&w=774&auto=format&fit=crop" alt="Bag" class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-500">
                        <div class="absolute inset-x-0 bottom-0 p-4 translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                            <button class="add-to-cart-btn w-full bg-emera-950 text-white py-3 text-xs uppercase tracking-widest hover:bg-black transition-colors">
                                Add to Cart
                            </button>
                        </div>
                    </div>
                    <div class="flex justify-between items-start">
                        <div>
                            <h3 class="text-lg font-serif text-gray-900 group-hover:text-emera-800 transition-colors">The Siena Crossbody</h3>
                            <p class="text-sm text-gray-500 mt-1">Obsidian Black</p>
                        </div>
                        <p class="text-sm font-medium text-gray-900">$890</p>
                    </div>
                </div>

                <!-- Product 3 -->
                <div class="group">
                    <div class="relative w-full aspect-[4/5] bg-white overflow-hidden mb-4">
                        <img src="https://images.unsplash.com/photo-1605763240004-7d93b172d7cd?q=80&w=774&auto=format&fit=crop" alt="Bag" class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-500">
                        <div class="absolute inset-x-0 bottom-0 p-4 translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                            <button class="add-to-cart-btn w-full bg-emera-950 text-white py-3 text-xs uppercase tracking-widest hover:bg-black transition-colors">
                                Add to Cart
                            </button>
                        </div>
                         <div class="absolute top-3 right-3">
                            <span class="bg-emera-900/90 text-white text-[10px] font-bold px-2 py-1 uppercase tracking-widest">Best Seller</span>
                        </div>
                    </div>
                    <div class="flex justify-between items-start">
                        <div>
                            <h3 class="text-lg font-serif text-gray-900 group-hover:text-emera-800 transition-colors">The Amalfi Clutch</h3>
                            <p class="text-sm text-gray-500 mt-1">Cream Canvas & Leather</p>
                        </div>
                        <p class="text-sm font-medium text-gray-900">$650</p>
                    </div>
                </div>

                <!-- Product 4 -->
                <div class="group">
                    <div class="relative w-full aspect-[4/5] bg-white overflow-hidden mb-4">
                        <img src="https://images.unsplash.com/photo-1594223274512-ad4803739b7c?q=80&w=914&auto=format&fit=crop" alt="Bag" class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-500">
                        <div class="absolute inset-x-0 bottom-0 p-4 translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                            <button class="add-to-cart-btn w-full bg-emera-950 text-white py-3 text-xs uppercase tracking-widest hover:bg-black transition-colors">
                                Add to Cart
                            </button>
                        </div>
                    </div>
                    <div class="flex justify-between items-start">
                        <div>
                            <h3 class="text-lg font-serif text-gray-900 group-hover:text-emera-800 transition-colors">The Roma Satchel</h3>
                            <p class="text-sm text-gray-500 mt-1">Emerald Green</p>
                        </div>
                        <p class="text-sm font-medium text-gray-900">$1,450</p>
                    </div>
                </div>
            </div>
            
            <div class="mt-16 text-center">
                 <a href="#" class="inline-block border-b border-gray-900 text-gray-900 uppercase tracking-widest text-xs font-semibold pb-1 hover:text-emera-700 hover:border-emera-700 transition-all">View All Handbags</a>
            </div>
        </div>
    </section>

    <!-- Brand Story / Parallax-ish -->
    <section class="relative py-24 bg-emera-950 text-white overflow-hidden">
        <div class="absolute inset-0 opacity-20">
             <img src="https://images.unsplash.com/photo-1550614000-4b9519e02a48?q=80&w=1740&auto=format&fit=crop" class="w-full h-full object-cover" alt="Workshop">
        </div>
        <div class="relative max-w-4xl mx-auto px-4 text-center">
            <h2 class="text-3xl md:text-5xl font-serif mb-6">Masterful Craftsmanship</h2>
            <p class="text-lg text-gray-300 leading-relaxed mb-10 font-light">
                Each Emera piece is cut and stitched by hand in our Florence atelier. We preserve the tradition of Italian leather-working, creating heirlooms that transcend seasons.
            </p>
            <a href="#" class="inline-block border border-white px-8 py-3 text-xs uppercase tracking-widest hover:bg-white hover:text-emera-950 transition-all">Our Story</a>
        </div>
    </section>
    

    <script>
  window.addEventListener("pageshow", function (event) {
    if (event.persisted) {
      window.location.reload();
    }
  });
</script>


