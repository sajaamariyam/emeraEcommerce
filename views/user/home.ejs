
<%- include('../partials/user/header', { user: user }) %>

    <!-- Cinematic Hero Slideshow -->
    <header id="hero-slideshow" class="relative w-full h-[95vh] overflow-hidden bg-stone-100">
        <!-- Slides -->
        <div class="slides-container absolute inset-0">
            <!-- Slide 1: Aesthetic Shoulder Bag -->
            <div class="hero-slide absolute inset-0 opacity-100 transition-opacity duration-1000 ease-in-out z-10">
                <img src="https://images.unsplash.com/photo-1591561954557-26941169b49e?q=80&w=2070&auto=format&fit=crop" 
                     alt="Aesthetic Mini Bag" 
                     class="w-full h-full object-cover object-center transform scale-100 animate-ken-burns">
                <div class="absolute inset-0 bg-black/20"></div>
            </div>
            <!-- Slide 2: Cute Tote Detail -->
            <div class="hero-slide absolute inset-0 opacity-0 transition-opacity duration-1000 ease-in-out z-0">
                <img src="https://images.unsplash.com/photo-1584917865442-de89df76afd3?q=80&w=2070&auto=format&fit=crop" 
                     alt="Chic Tote" 
                     class="w-full h-full object-cover object-center transform scale-100">
                <div class="absolute inset-0 bg-black/25"></div>
            </div>
            <!-- Slide 3: Luxury Lifestyle -->
            <div class="hero-slide absolute inset-0 opacity-0 transition-opacity duration-1000 ease-in-out z-0">
                <img src="https://images.unsplash.com/photo-1594223274512-ad4803739b7c?q=80&w=2070&auto=format&fit=crop" 
                     alt="Artisan Leather" 
                     class="w-full h-full object-cover object-center transform scale-100">
                <div class="absolute inset-0 bg-black/20"></div>
            </div>
        </div>
        
        <!-- Hero Content (Large Aesthetic Typography) -->
        <div class="absolute inset-0 flex flex-col justify-center px-6 sm:px-12 lg:px-24 items-center text-center max-w-[1440px] mx-auto z-20">
            <div class="overflow-hidden mb-6">
                <span class="text-white text-[12px] tracking-[0.6em] uppercase font-bold block animate-reveal" style="animation-delay: 0.1s;">Winter Collection 2025    </span>
            </div>                                                                  
            <p class="text-white/90 max-w-xl mb-12 text-lg md:text-xl font-light leading-relaxed animate-reveal" style="animation-delay: 0.5s;">
                Handcrafted in Florence. Made for women who love quality and timeless style.
            </p>
            <div class="flex flex-col sm:flex-row gap-6 animate-reveal" style="animation-delay: 0.7s;">
                <a href="/products" class="group px-14 py-6 bg-white text-emera-950 text-[11px] tracking-[0.4em] uppercase font-black hover:bg-emera-950 hover:text-white transition-all duration-700 shadow-2xl">
                    Shop The Collection
                </a>
            </div>
        </div>

        <!-- Slide Progress Bar -->
        <div class="absolute bottom-0 left-0 w-full h-1 bg-white/10 z-30">
            <div id="slide-progress" class="h-full bg-white transition-all duration-[5000ms] linear w-0"></div>
        </div>
    </header>

    <!-- Aesthetic Categories Grid -->
    <section class="py-32 bg-white">
        <div class="max-w-[1440px] mx-auto px-6 lg:px-12">
            <div class="flex flex-col md:flex-row justify-between items-end mb-24 gap-8">
                <div class="max-w-2xl">
                    <span class="text-emera-700 text-[11px] font-black tracking-[0.5em] uppercase mb-4 block"> </span>
                    <h2 class="text-5xl md:text-6xl font-serif leading-tight">Choose <span class="italic font-light text-gray-400">Your Style</span></h2>
                </div>
             </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
            <% categories.slice(0,3).forEach(cat => { %>
                <a href="/products?category=<%= cat._id %>" class="group block relative">
                <div class="aspect-[4/5] overflow-hidden bg-stone-50">
                    <img 
                    src="<%= cat.image?.url %>" 
                    alt="<%= cat.name %>" 
                    class="w-full h-full object-cover grayscale-[20%] group-hover:grayscale-0 transition-all duration-1000 group-hover:scale-105"
                    >
                </div>

                <div class="mt-8 flex justify-between items-center">
                    <h3 class="text-2xl font-serif"><%= cat.name %></h3>
                    <div class="w-12 h-px bg-emera-950 group-hover:w-20 transition-all duration-500"></div>
                </div>

                <p class="text-[10px] text-gray-400 uppercase tracking-widest mt-2 font-bold">
                    Explore Collection
                </p>
                </a>
            <% }) %>
            </div>

    </section>

<!-- Featured Products Showcase -->

<section class="py-24 bg-white">
  <div class="max-w-[1440px] mx-auto px-6 lg:px-12">

    <!-- SECTION HEADING -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-serif text-gray-900 mb-4">
        Featured Products
      </h2>
      <p class="text-sm text-gray-500 tracking-wide">
        Handpicked styles crafted with care
      </p>
    </div>

    <!-- PRODUCTS GRID -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10">

      <% if (Array.isArray(products) && products.length > 0) { %>
        <% products.forEach(p => { %>

          <div class="border border-gray-200 p-4 hover:shadow-lg transition">

            <a href="/products/<%= p._id %>" class="block">
              <img
                src="<%= p.productImage?.[0]?.url || '/images/placeholder.png' %>"
                alt="<%= p.name %>"
                class="w-full h-[300px] object-cover mb-4"
              />
            </a>

            <div class="text-center">
              <a
                href="/products/<%= p._id %>"
                class="block text-lg font-semibold text-gray-900 mb-1"
              >
                <%= p.name %>
              </a>

              <p class="text-xs uppercase tracking-widest text-gray-500 mb-2">
                <%= p.material || 'Premium Leather' %>
              </p>

              <p class="text-base font-bold text-gray-900">
                â‚¹<%= p.salePrice ? p.salePrice.toLocaleString() : '0' %>
              </p>
            </div>

          </div>

        <% }) %>
      <% } else { %>
        <p class="col-span-full text-center text-gray-400">
          No products available
        </p>
      <% } %>

    </div>
  </div>
</section>



    <!-- Brand Legacy -->
    <section class="relative py-48 bg-emera-950 text-white overflow-hidden">
        <div class="absolute inset-0 opacity-20">
             <img src="https://images.unsplash.com/photo-1550614000-4b9519e02a48?q=80&w=1740&auto=format&fit=crop" class="w-full h-full object-cover" alt="Artisan">
        </div>
        <div class="relative max-w-5xl mx-auto px-6 text-center">
            <h2 class="text-5xl md:text-8xl font-serif mb-12 leading-tight">Our<br/><span class="italic font-light">Craftsmanship</span></h2>
            <p class="text-xl md:text-2xl text-gray-300 leading-relaxed mb-16 font-light max-w-2xl mx-auto italic">
                "We create high-quality bags using traditional craftsmanship and care."
            </p>
            <div class="h-16 w-px bg-white/20 mx-auto"></div>
        </div>
    </section>

    <style>
        @keyframes reveal {
            from { transform: translateY(30px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }
        .animate-reveal { animation: reveal 1s cubic-bezier(0.22, 1, 0.36, 1) forwards; }
        
        @keyframes kenBurns {
            0% { transform: scale(1); }
            100% { transform: scale(1.15); }
        }
        .animate-ken-burns { animation: kenBurns 10s linear infinite alternate; }

        .reveal-item { transition: all 1.2s cubic-bezier(0.16, 1, 0.3, 1); transform: translateY(50px); }
        .reveal-item.active { opacity: 1; transform: translateY(0); }
    </style>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const items = document.querySelectorAll('.reveal-item');

  const observer = new IntersectionObserver(
    entries => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('active');
        }
      });
    },
    { threshold: 0.15 }
  );

  items.forEach(item => observer.observe(item));
});
</script>



