<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Emera Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50">

<!-- FIXED SIDEBAR -->

<% const page = typeof activePage !== 'undefined' ? activePage : '' %>


<div class="fixed top-0 left-0 w-52 h-screen bg-teal-700 text-white flex flex-col">

    <div class="px-5 py-5 text-lg font-semibold border-b border-teal-600">
        Emera Admin
    </div>

    <nav class="flex-1 py-2 overflow-y-auto text-sm">

        <a href="/admin/adminDashboard"
            class="flex items-center px-5 py-3 transition
        <%= page === 'dashboard'
        ? 'bg-teal-800 border-l-4 border-white text-white'
        : 'hover:bg-teal-600' %>">
        <i class="fas fa-th-large w-5"></i>
        <span class="ml-3">Dashboard</span>
        </a>


        <a href="/admin/users"
        class="flex items-center px-5 py-3 transition
        <%= page === 'users'
                ? 'bg-teal-800 border-l-4 border-white text-white'
                : 'hover:bg-teal-600' %>">
            <i class="fas fa-users w-5"></i>
            <span class="ml-3">Users</span>
        </a>


        <a href="/admin/products"
        class="flex items-center px-5 py-3 transition
        <%= page === 'products'
                ? 'bg-teal-800 border-l-4 border-white text-white'
                : 'hover:bg-teal-600' %>">
            <i class="fas fa-users w-5"></i>
            <span class="ml-3">Products</span>
        </a>

        <a href="/admin/categories"
        class="flex items-center px-5 py-3 transition
        <%= page === 'categories'
                ? 'bg-teal-800 border-l-4 border-white text-white'
                : 'hover:bg-teal-600' %>">
            <i class="fas fa-users w-5"></i>
            <span class="ml-3">Categories</span>
        </a>

        <a href="/admin/orders"
        class="flex items-center px-5 py-3 transition
        <%= page === 'orders'
                ? 'bg-teal-800 border-l-4 border-white text-white'
                : 'hover:bg-teal-600' %>">
            <i class="fas fa-users w-5"></i>
            <span class="ml-3">Orders</span>
        </a>

        <a href="#" class="flex items-center px-5 py-3 hover:bg-teal-600">
            <i class="fas fa-cog w-5"></i>
            <span class="ml-3">Settings</span>
        </a>

    </nav>

    <a href="/admin/logout"
       class="flex items-center px-5 py-4 border-t border-teal-600 hover:bg-teal-600 text-red-200">
        <i class="fas fa-sign-out-alt w-5"></i>
        <span class="ml-3">Logout</span>
    </a>
</div>
