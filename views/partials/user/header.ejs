<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Emera - Luxury Bags Store</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-stone-50">
    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <h1 class="text-2xl font-bold text-emerald-700">Emera</h1>
                </div>
                
                <nav class="hidden md:flex space-x-8">
                    <a href="#" class="text-gray-900 hover:text-emerald-600 font-medium">Home</a>
                    <a href="#" class="text-gray-700 hover:text-emerald-600">About</a>
                    <a href="#" class="text-gray-700 hover:text-emerald-600">Shop</a>
                </nav>

                <div class="flex items-center space-x-4">
                    <button class="p-2 hover:bg-gray-100 rounded-full">
                        <i class="fas fa-search"></i>
                    </button>
                    <button class="p-2 hover:bg-gray-100 rounded-full">
                        <i class="far fa-heart"></i>
                    </button>
                    <button class="p-2 hover:bg-gray-100 rounded-full relative">
                        <i class="fas fa-shopping-cart"></i>
                        <span class="absolute top-0 right-0 bg-emerald-600 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center" id="cartCount">2</span>
                    </button>
                                    
                    <% if (user) { %>

<div class="relative inline-block group">

    <!-- Username button -->
    <button class="font-medium text-gray-700 group-hover:text-emerald-600 transition">
        <%= user.name %>
    </button>

    <!-- HOVER BRIDGE (fix disappearing dropdown) -->
    <div class="absolute left-0 right-0 h-4 group-hover:block"></div>

    <!-- Dropdown -->
    <div 
        class="absolute right-0 mt-2 w-40 bg-white shadow-lg rounded-md border border-gray-200
               opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all
               z-50 pointer-events-auto">

        <a href="/userProfile" 
           class="block px-4 py-2 text-gray-700 hover:bg-gray-100">
            Profile
        </a>

        <a onclick="openLogoutModal()" 
            class="block px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer">
            Logout
        </a>

    </div>
</div>

        <% } else { %>

<div class="hidden md:flex items-center space-x-3">
    <a href="/login" class="px-4 py-2 text-gray-700 hover:text-emerald-600 font-medium transition">
        Login
    </a>
    <a href="/signup" class="px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white font-medium rounded-lg transition">
        Sign Up
    </a>
</div>

<% } %>





                    <button class="md:hidden p-2" id="mobileMenuBtn">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div class="md:hidden border-t hidden" id="mobileMenu">
            <div class="px-4 py-4 space-y-3">
                <a href="#" class="block text-gray-900 font-medium">Home</a>
                <a href="#" class="block text-gray-700">About</a>
                <a href="#" class="block text-gray-700">Shop</a>
                <a href="login.html" class="block text-gray-700">Login</a>
                <a href="signup.html" class="block text-emerald-600 font-medium">Sign Up</a>
            </div>
        </div>
    </header>

  <!-- Logout Modal -->
<div id="logoutModal" class="fixed inset-0 bg-black bg-opacity-30 hidden flex items-center justify-center p-4 z-50">
    
    <!-- Modal Content -->
    <div class="bg-white rounded-3xl shadow-2xl p-8 w-full max-w-md relative">

        <!-- Close Button -->
        <button 
            onclick="closeLogoutModal()"
            class="absolute top-6 right-6 text-gray-400 hover:text-gray-600 transition-colors"
        >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>

        <!-- Icon -->
        <div class="flex justify-center mb-6">
            <div class="w-20 h-20 bg-[#e8f4f1] rounded-full flex items-center justify-center">
                <svg class="w-10 h-10 text-[#c9a961]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                </svg>
            </div>
        </div>

        <h2 class="text-2xl font-semibold text-gray-900 text-center mb-3">Log Out?</h2>

        <p class="text-gray-600 text-center mb-8">
            Are you sure you want to log out of your account?
        </p>

        <div class="flex gap-4">

            <button 
                onclick="closeLogoutModal()"
                class="flex-1 py-3.5 border-2 border-[#c9a961] text-[#c9a961] rounded-full font-medium hover:bg-[#c9a961] hover:text-white transition-all duration-200">
                No, Cancel
            </button>

            <button 
                onclick="handleLogout()"
                class="flex-1 py-3.5 bg-[#0f6b5a] text-white rounded-full font-medium hover:bg-[#0d5a4a] transition-colors duration-200">
                Yes, Proceed
            </button>

        </div>
    </div>
</div>

<script>
    function openLogoutModal() {
        document.getElementById("logoutModal").classList.remove("hidden");
    }

    function closeLogoutModal() {
        document.getElementById("logoutModal").classList.add("hidden");
    }

    function handleLogout() {
        window.location.href = "/logout";  // Correct logout route
    }
</script>

