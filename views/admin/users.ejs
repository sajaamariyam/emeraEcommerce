




<%- include("../partials/admin/header") %>

<div class="ml-52 h-screen overflow-y-auto bg-gray-50">

    <!-- Top bar -->
    <div class="bg-white border-b sticky top-0 z-10">
        <div class="px-8 py-4 max-w-7xl mx-auto flex justify-between items-center">
            <h1 class="text-xl font-semibold text-teal-700">
                Emera Admin — User Management
            </h1>

            <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-teal-600 rounded-full flex items-center justify-center text-white text-sm font-medium">
                    JD
                </div>
                <span class="text-sm text-gray-700">John Doe</span>
            </div>
        </div>
    </div>

            
        <!-- Main Content -->

            <!-- Content -->
            <div class="p-8">
                <div class="mb-6">
                    <h2 class="text-2xl font-bold text-gray-800">User Management</h2>
                    <p class="text-gray-600 mt-1">Manage and monitor user accounts</p>
                </div>

                <!-- Stats Cards -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                    <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-100">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm text-gray-600 mb-1">Total Users</p>
                                <p class="text-3xl font-bold text-gray-800">
                                    <%= totalUsers %>
                                </p>
                                <div class="h-1 w-12 bg-yellow-400 mt-2"></div>
                            </div>
                            <div class="w-12 h-12 bg-teal-100 rounded-lg flex items-center justify-center">
                                <i class="fas fa-users text-teal-600 text-xl"></i>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-100">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm text-gray-600 mb-1">Active Users</p>
                                <p class="text-3xl font-bold text-green-600">
                                    <%= activeUsers %>
                                </p>
                                <div class="h-1 w-12 bg-yellow-400 mt-2"></div>
                            </div>
                            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                                <i class="fas fa-user-check text-green-600 text-xl"></i>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-100">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm text-gray-600 mb-1">Blocked Users</p>
                                <p class="text-3xl font-bold text-red-600">
                                    <%= blockedUsers %>
                                </p>
                                <div class="h-1 w-12 bg-yellow-400 mt-2"></div>
                            </div>
                            <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
                                <i class="fas fa-user-lock text-red-600 text-xl"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Filters and Search -->
                <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
                    <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
        
                        
                    <form method="GET" action="/admin/users" class="flex-1 w-full md:w-auto">

                        <input type="hidden" name="status" value="<%= status %>">
                        <input type="hidden" name="page" value="1">

                        <div class="relative">
                            <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                            <input 
                                type="text"
                                name="search"
                                value="<%= search || '' %>"
                                placeholder="Search by name or email..."
                                class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg"
                            >
                        </div>
                    </form>


                        
                        <div class="flex gap-3 w-full md:w-auto">
                            <select id="statusFilter" class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500">
                                <option value="all" <%= status === "all" ? "selected" : "" %>>All Users</option>
                                <option value="active" <%= status === "active" ? "selected" : "" %>>Active Only</option>
                                <option value="blocked" <%= status === "blocked" ? "selected" : "" %>>Blocked Only</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Users Table -->
                <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-50 border-b border-gray-200">
                                <tr>
                                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">User</th>
                                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Contact</th>
                                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Join Date</th>
                                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Orders</th>
                                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Total Spent</th>
                                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
                                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                                <!-- Users will be dynamically inserted here -->
                                 <tbody class="divide-y divide-gray-200">
                                <% users.forEach(user => { %>
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4">
                                            <div class="flex items-center gap-3">
                                                <div class="w-10 h-10 bg-teal-600 rounded-full flex items-center justify-center text-white text-sm">
                                                    <%= user.name.charAt(0) %>
                                                </div>
                                                <div>
                                                    <p class="font-semibold"><%= user.name %></p>
                                                    <p class="text-xs text-gray-500"><%= user.email %></p>
                                                </div>
                                            </div>
                                        </td>

                                        <td class="px-6 py-4 text-sm">
                                            <p><%= user.email %></p>
                                            <p class="text-gray-500"><%= user.phone %></p>
                                        </td>

                                        <td class="px-6 py-4 text-sm">
                                            <%= user.createdOn?.toDateString() || "-" %>
                                        </td>

                                        <td class="px-6 py-4 text-sm">
                                            <%= user.orderHistory?.length || 0 %>
                                        </td>

                                        <td class="px-6 py-4 text-sm">
                                            ₹<%= user.wallet || 0 %>
                                        </td>

                                        <td class="px-6 py-4">
                                            <% if (user.isBlocked) { %>
                                                <span class="px-3 py-1 bg-red-100 text-red-700 rounded-full text-xs">
                                                    Blocked
                                                </span>
                                            <% } else { %>
                                                <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-xs">
                                                    Active
                                                </span>
                                            <% } %>
                                        </td>

                                        <td class="px-6 py-4">
                                            <% if (user.isBlocked) { %>
                                                <form method="POST" action="/admin/users/unblock/<%= user._id %>">
                                                    <button 
                                                        class="px-3 py-1 bg-green-600 text-white rounded"
                                                        onclick="return confirm('Are you sure you want to unblock this user?')"
                                                        >
                                                        Unblock
                                                    </button>
                                                </form>
                                            <% } else { %>
                                                <form method="POST" action="/admin/users/block/<%= user._id %>">
                                                    <button 
                                                        class="px-3 py-1 bg-red-600 text-white rounded"
                                                        onclick="return confirm('Are you sure you want to block this user?')"
                                                        >
                                                        Block
                                                        </button>

                                                </form>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>

                            </tbody>
                        </table>


                        <div class="flex justify-center mt-6 gap-2">

                       <% if (totalPages > 1) { %>
                            <div class="flex justify-center mt-6 gap-2">

                                <% if (currentPage > 1) { %>
                                    <a
                                        href="/admin/users?page=<%= currentPage - 1 %><%= search ? `&search=${search}` : '' %><%= status !== 'all' ? `&status=${status}` : '' %>"
                                        class="px-3 py-1 border rounded hover:bg-gray-100">
                                        Prev
                                    </a>
                                <% } %>

                                <% for (let i = 1; i <= totalPages; i++) { %>
                                    <a
                                        href="/admin/users?page=<%= i %><%= search ? `&search=${search}` : '' %><%= status !== 'all' ? `&status=${status}` : '' %>"
                                        class="px-3 py-1 border rounded
                                        <%= currentPage === i ? 'bg-teal-600 text-white' : 'hover:bg-gray-100' %>">
                                        <%= i %>
                                    </a>
                                <% } %>

                                <% if (currentPage < totalPages) { %>
                                    <a
                                        href="/admin/users?page=<%= currentPage + 1 %><%= search ? `&search=${search}` : '' %><%= status !== 'all' ? `&status=${status}` : '' %>"
                                        class="px-3 py-1 border rounded hover:bg-gray-100">
                                        Next
                                    </a>
                                <% } %>

                            </div>
                            <% } %>


                    </div>

                    

                    </div>
                </div>
            </div>
        </div>
    </div>

    </div>

</div>

<script>
    const statusFilter = document.getElementById("statusFilter");

    statusFilter.addEventListener("change", () => {
        const status = statusFilter.value;
        const params = new URLSearchParams(window.location.search);

        params.set("page", 1); // reset pagination

        if (status === "all") {
            params.delete("status");
        } else {
            params.set("status", status);
        }

        window.location.href = `/admin/users?${params.toString()}`;
    });
</script>



<%- include("../partials/admin/footer") %>
