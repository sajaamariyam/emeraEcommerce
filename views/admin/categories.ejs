<%- include("../partials/admin/header") %>

<div class="ml-52 h-screen overflow-y-auto bg-gray-50">

    <!-- Top Navigation Bar -->
    <div class="bg-white border-b sticky top-0 z-10">
        <div class="px-8 py-4 max-w-7xl mx-auto flex justify-between items-center">
            <h1 class="text-xl font-semibold text-teal-700">Category Management</h1>
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-teal-600 rounded-full flex items-center justify-center text-white text-sm font-medium">
                    <%= admin.name.charAt(0) %>
                </div>
                <span class="text-sm text-gray-700"><%= admin.name %></span>
            </div>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="p-8 max-w-7xl mx-auto">
        <div class="flex items-center justify-between mb-8">
            <div>
                <h2 class="text-2xl font-bold text-gray-800">Product Categories</h2>
                <p class="text-gray-600 mt-1">Manage your shop categories here.</p>
            </div>
            <button onclick="openAddModal()" class="bg-teal-700 text-white px-6 py-3 rounded-lg hover:bg-teal-800 transition flex items-center gap-2 font-medium shadow-md">
                <i class="fas fa-plus"></i> Add Category
            </button>
        </div>

        <!-- Search and Status Filtering -->
        <div class="bg-white rounded-lg shadow-sm p-6 mb-8 border border-gray-100">
            <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
                <form method="GET" action="/admin/categories" class="flex-1 w-full md:w-auto flex gap-2">
                    <input type="hidden" name="status" value="<%= status %>">
                    <div class="relative flex-1">
                        <i class="fas fa-search absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                        <input 
                            type="text" 
                            name="search"
                            value="<%= search || '' %>"
                            placeholder="Search categories..." 
                            class="w-full pl-12 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500"
                        >
                    </div>
                    <% if (search) { %>
                        <a href="/admin/categories?status=<%= status %>" class="px-5 py-3 border border-gray-300 rounded-lg hover:bg-gray-100 font-medium text-gray-600 flex items-center transition">
                            Clear
                        </a>
                    <% } %>
                </form>

                <div class="flex gap-3 w-full md:w-auto">
                    <select onchange="window.location.href='/admin/categories?status=' + this.value + '&search=<%= search %>'" class="px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 bg-white cursor-pointer">
                        <option value="all" <%= status === 'all' ? 'selected' : '' %>>All Status</option>
                        <option value="listed" <%= status === 'listed' ? 'selected' : '' %>>Listed Only</option>
                        <option value="unlisted" <%= status === 'unlisted' ? 'selected' : '' %>>Unlisted Only</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Categories List Table -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden border border-gray-100">
            <table class="w-full text-left">
                <thead class="bg-gray-50 border-b border-gray-200">
                    <tr>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Image</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Name</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Products</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    <% categories.forEach(category => { %>
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4">
                                <img src="<%= category.image?.url || '/images/placeholder.png' %>" class="w-12 h-12 rounded object-cover border border-gray-100 shadow-sm">
                            </td>
                            <td class="px-6 py-4">
                                <p class="font-bold text-gray-800"><%= category.name %></p>
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-600">
                                <%= category.productCount || 0 %> Items
                            </td>
                            <td class="px-6 py-4">
                                <% if (category.isListed) { %>
                                    <span class="px-3 py-1 bg-green-50 text-green-700 text-xs font-bold rounded-full border border-green-100">Listed</span>
                                <% } else { %>
                                    <span class="px-3 py-1 bg-red-50 text-red-700 text-xs font-bold rounded-full border border-red-100">Unlisted</span>
                                <% } %>
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex justify-end gap-4">
                                    <button onclick="openEditModal('<%= category._id %>', '<%= category.name %>', '<%= category.image?.url || '' %>', <%= category.isListed %>)" class="text-teal-600 hover:text-teal-800 text-sm font-bold transition">Edit</button>
                                    <button onclick="confirmStatusChange('<%= category._id %>', <%= category.isListed %>)" class="text-gray-500 hover:text-gray-700 text-sm font-bold transition">
                                        <%= category.isListed ? 'Unlist' : 'List' %>
                                    </button>
                                    <button onclick="confirmDelete('<%= category._id %>')" class="text-red-600 hover:text-red-800 text-sm font-bold transition">Delete</button>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

            <!-- Pagination Control -->
            <% if (totalPages > 1) { %>
                <div class="px-6 py-6 bg-gray-50 border-t flex justify-center gap-2">
                    <% if (currentPage > 1) { %>
                        <a href="/admin/categories?page=<%= currentPage - 1 %>&search=<%= search %>&status=<%= status %>" class="px-3 py-1 bg-white border rounded hover:bg-gray-100 text-sm font-medium">Prev</a>
                    <% } %>
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <a href="/admin/categories?page=<%= i %>&search=<%= search %>&status=<%= status %>" class="w-8 h-8 flex items-center justify-center border rounded text-sm font-bold transition-all <%= currentPage === i ? 'bg-teal-700 text-white border-teal-700' : 'bg-white text-gray-500 hover:bg-gray-100' %>"><%= i %></a>
                    <% } %>
                    <% if (currentPage < totalPages) { %>
                        <a href="/admin/categories?page=<%= currentPage + 1 %>&search=<%= search %>&status=<%= status %>" class="px-3 py-1 bg-white border rounded hover:bg-gray-100 text-sm font-medium">Next</a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Add / Edit Modal -->
<div id="categoryModal" class="hidden fixed inset-0 z-50 flex items-center justify-center p-4">
    <div class="fixed inset-0 bg-black/50" onclick="closeModal()"></div>
    <div class="bg-white rounded-lg shadow-xl w-full max-w-lg z-50 overflow-hidden transform transition-all">
        <div class="px-6 py-4 border-b flex justify-between items-center bg-gray-50">
            <h3 id="modalTitle" class="text-lg font-bold text-gray-800">Add Category</h3>
            <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600 text-2xl">&times;</button>
        </div>
        <form id="categoryForm" enctype="multipart/form-data" class="p-6">
            <input type="hidden" name="categoryId" id="categoryId">
            <div class="space-y-5">
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Name</label>
                    <input type="text" name="name" id="categoryName" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 outline-none transition" placeholder="Category Name">
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Status</label>
                    <select name="isListed" id="categoryStatus" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 outline-none bg-white">
                        <option value="true">Listed</option>
                        <option value="false">Unlisted</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Image</label>
                    <div class="flex items-center gap-4">
                        <div onclick="document.getElementById('categoryImage').click()" class="w-20 h-20 border-2 border-dashed border-gray-300 rounded-lg flex flex-col items-center justify-center bg-gray-50 cursor-pointer hover:bg-gray-100 hover:border-teal-500 transition overflow-hidden group">
                            <img id="previewImage" class="hidden w-full h-full object-cover">
                            <div id="uploadPlaceholder" class="text-center group-hover:scale-110 transition-transform">
                                <i class="fas fa-camera text-gray-400"></i>
                            </div>
                        </div>
                        <div class="flex-1">
                            <p class="text-xs text-gray-500">Pick an image for this category.</p>
                            <input type="file" id="categoryImage" name="image" accept="image/*" class="hidden" onchange="previewFile(this)">
                        </div>
                    </div>
                </div>
            </div>
            <div class="flex gap-3 mt-8">
                <button type="submit" class="flex-1 bg-teal-700 text-white py-3 rounded-lg font-bold hover:bg-teal-800 transition shadow-md">Save</button>
                <button type="button" onclick="closeModal()" class="flex-1 border border-gray-300 text-gray-600 py-3 rounded-lg font-bold hover:bg-gray-50 transition">Cancel</button>
            </div>
        </form>
    </div>
</div>

<!-- Small Confirmation Modal -->
<div id="confirmModal" class="hidden fixed inset-0 z-[60] flex items-center justify-center p-4">
    <div class="fixed inset-0 bg-black/40" onclick="closeConfirmModal()"></div>
    <div class="bg-white rounded-lg shadow-2xl max-w-sm w-full p-6 z-[70] text-center transform transition-all">
        <h4 id="confirmTitle" class="text-lg font-bold text-gray-900 mb-2">Are you sure?</h4>
        <p id="confirmMessage" class="text-sm text-gray-500 mb-6">Do you want to do this?</p>
        <div class="flex gap-3">
            <button id="confirmBtn" class="flex-1 bg-teal-700 text-white py-2 rounded-lg font-bold hover:bg-teal-800 transition">Yes, Sure</button>
            <button onclick="closeConfirmModal()" class="flex-1 border border-gray-300 py-2 rounded-lg font-bold hover:bg-gray-50 transition text-gray-600">Cancel</button>
        </div>
    </div>
</div>

<script>
    const modal = document.getElementById("categoryModal");
    const form = document.getElementById("categoryForm");
    const preview = document.getElementById("previewImage");
    const placeholder = document.getElementById("uploadPlaceholder");
    const confirmModal = document.getElementById("confirmModal");

    function openAddModal() {
        form.reset();
        document.getElementById("categoryId").value = "";
        document.getElementById("modalTitle").innerText = "Add Category";
        preview.classList.add("hidden");
        placeholder.classList.remove("hidden");
        modal.classList.remove("hidden");
        document.body.style.overflow = "hidden";
    }

    function openEditModal(id, name, imageUrl, isListed) {
        document.getElementById("categoryId").value = id;
        document.getElementById("categoryName").value = name;
        document.getElementById("categoryStatus").value = isListed.toString();
        document.getElementById("modalTitle").innerText = "Edit Category";
        
        if (imageUrl) {
            preview.src = imageUrl;
            preview.classList.remove("hidden");
            placeholder.classList.add("hidden");
        } else {
            preview.classList.add("hidden");
            placeholder.classList.remove("hidden");
        }
        
        modal.classList.remove("hidden");
        document.body.style.overflow = "hidden";
    }

    function closeModal() {
        modal.classList.add("hidden");
        document.body.style.overflow = "";
    }

    function previewFile(input) {
        const file = input.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                preview.src = e.target.result;
                preview.classList.remove("hidden");
                placeholder.classList.add("hidden");
            }
            reader.readAsDataURL(file);
        }
    }

    form.onsubmit = async (e) => {
        e.preventDefault();
        const formData = new FormData(form);
        const categoryId = document.getElementById("categoryId").value;
        const url = categoryId ? `/admin/categories/edit/${categoryId}` : '/admin/categories';

        try {
            const res = await fetch(url, { method: 'POST', body: formData });
            if (res.ok) {
                window.location.reload();
            } else {
                const data = await res.json();
                alert(data.message || "Failed to save.");
            }
        } catch (err) {
            alert("An error occurred.");
        }
    };

    function confirmStatusChange(id, isListed) {
        const action = isListed ? 'unlist' : 'list';
        const msg = `Are you sure you want to ${action} this?`;
        
        showConfirmation(msg, async () => {
            try {
                const res = await fetch(`/admin/categories/toggleCategoryStatus/${id}`, { method: 'PATCH' });
                if (res.ok) window.location.reload();
                else alert("Failed to update status.");
            } catch (err) {
                alert("An error occurred.");
            }
        });
    }

    function confirmDelete(id) {
        showConfirmation("Are you sure you want to delete this?", async () => {
            try {
                const res = await fetch(`/admin/categories/delete/${id}`, { method: 'DELETE' });
                if (res.ok) window.location.reload();
                else alert("Delete failed.");
            } catch (err) {
                alert("An error occurred.");
            }
        });
    }

    function showConfirmation(message, onConfirm) {
        document.getElementById("confirmMessage").innerText = message;
        document.getElementById("confirmBtn").onclick = onConfirm;
        confirmModal.classList.remove("hidden");
    }

    function closeConfirmModal() {
        confirmModal.classList.add("hidden");
    }
</script>

<%- include("../partials/admin/footer") %>